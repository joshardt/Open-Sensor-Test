<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sensor_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardsAndDialogs"
    android:layout_margin="5dp"
    card_view:contentPadding="8dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/sensor_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/sensor_image_content_description" />
        <TextView
            android:id="@+id/sensor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sensor_image"
            android:layout_toEndOf="@id/sensor_image"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/heading_one"
            android:textColor="@color/primaryText"/>
        <TextView
            android:id="@+id/sensor_info_one_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sensor_image"
            android:layout_toEndOf="@id/sensor_image"
            android:layout_below="@id/sensor_name"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/secondaryText" />
        <TextView
            android:id="@+id/sensor_info_one_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sensor_info_one_text"
            android:layout_toEndOf="@id/sensor_info_one_text"
            android:layout_below="@id/sensor_name"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/secondaryText" />
        <TextView
            android:id="@+id/sensor_info_two_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sensor_image"
            android:layout_toEndOf="@id/sensor_image"
            android:layout_below="@id/sensor_info_one_text"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/secondaryText" />
        <TextView
            android:id="@+id/sensor_info_two_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sensor_info_two_text"
            android:layout_toEndOf="@id/sensor_info_two_text"
            android:layout_below="@id/sensor_info_one_text"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/secondaryText" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
